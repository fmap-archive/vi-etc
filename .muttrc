# Vikram Verma {{{

set realname = "Vikram Verma"

# }}}
# Incoming Mail - OfflineIMAP {{{

set mbox_type = Maildir
set folder    = $HOME/var/mail/vikramverma
set postponed = "+[Gmail].Drafts/"
set spoolfile = "+inbox"
set check_new

mailboxes +inbox  +archive
mailboxes +drafts 
mailboxes +sent   +trash 
mailboxes +spam   +Lists 

# }}}
# Outgoing Mail - MSMTP {{{

set sendmail = /usr/bin/msmtp
unset record

set hostname="vikramverma.com"
set use_domain=yes

my_hdr X-URL: http://vikramverma.com
my_hdr X-Alignment: Chaotic Neutral
my_hdr Cc: Vikram Verma <me@vikramverma.com> # :X

set from = "me@vikramverma.com"

# Pretty Good Privacy
source ~/.mutt/gpg.rc
set pgp_autosign

# }}}
# Index View {{{

set sort=threads
set sort_aux=reverse-last-date-received
set index_format  = "%3C | %-21.20n %s%* %S | %d"
set date_format   = "%Y-%m-%d"

lists selfspark@googlegroups.com
lists nushackers@googlegroups.com
lists hackerspacesg@googlegroups.com
lists openfrog@googlegroups.com

set nomark_old

# }}}
# Pager View {{{

set pager = "builtin"
set pager_index_lines = 9
set pager_context = 5
set pager_format=%s
unset markers

ignore *
unignore To From Cc Date X-RSS-URL
unignore X-Alignment # Let's see if this catches on.

alternative_order text/plain text/html

# }}}
# File/Alias View {{{

set sort_browser = reverse-date
set folder_format = "%3C| [%N] %f"
set alias_format  = "%4n %t %-20a %r"

# }}}
# Status Bar {{{

set status_format = "%f(%n)%> %?p?drafts(%p)?"
unset help

# }}}
# Editor {{{

set tmpdir = $HOME/.mutt/tmp
set editor = "vim"
set edit_headers
set include

# }}}
# Colour {{{

source $HOME/.mutt/colours/solarized.mutt

# }}}
# Notifications {{{ 

set beep_new

# }}}
# Contacts {{{

set alias_file = $HOME/.mutt/aliases
source $alias_file

# }}}

set fast_reply
