# Account {{{

folder-hook vikramverma   source ~/.mutt/accounts/vikramverma.com.rc
folder-hook cuddlecouncil source ~/.mutt/accounts/cuddlecouncil.net.rc
folder-hook zalora        source ~/.mutt/accounts/zalora.com.rc

# }}}
# Incoming Mail - OfflineIMAP {{{

set mbox_type = Maildir
set folder    = $HOME/var/mail/
set check_new

set spoolfile = "+vikramverma/inbox"

mailboxes +vikramverma/inbox  
mailboxes +zalora/inbox

# }}}
# Outgoing Mail - MSMTP {{{

set sendmail = msmtp
unset record
set envelope_from
set metoo

set hostname="gmail.com" # Everyone seems to use it. It's a bit sad.
set use_domain=yes
set signature=""
set attribution=""

source ~/.mutt/gpg.rc
source ~/.mutt/smime.rc

# }}}
# Index View {{{

set sort=reverse-date-received
set index_format  = "%04C %-31.30u %s%* %Z"
set date_format   = "%Y-%m-%d"

lists selfspark@googlegroups.com
lists nushackers@googlegroups.com
lists hackerspacesg@googlegroups.com
lists openfrog@googlegroups.com

set nomark_old
set fast_reply
set abort_nosubject=no

# }}}
# Pager View {{{

set pager = "builtin"
set pager_index_lines = 0
set pager_context = 5
set pager_format=%s
unset markers

ignore *
unignore To From Cc Date X-RSS-URL Subject
unignore X-Alignment # Let's see if this catches on.

auto_view text/html
alternative_order text/plain text/html

# }}}
# File/Alias View {{{

set sort_browser = reverse-date
set folder_format = "%3C| [%N] %f"
set alias_format  = "%4n %t %-20a %r"

# }}}
# Status Bar {{{

unset status
set xterm_set_titles 
set xterm_title = "mutt: %f"
set status_format = "%f(%n)%> %?p?drafts(%p)?"
unset help

# }}}
# Editor {{{

set tmpdir = $HOME/.mutt/tmp
set editor = "vim"
set edit_headers=no
set include

# }}}
# Colour {{{

source ~/.mutt/colours/solarized.mutt

# }}}
# Notifications {{{ 

set beep_new

# }}}
# People {{{

set alias_file = ~/.mutt/aliases
source $alias_file

# }}}
