[general]
ui       = ttyui
accounts = vikramverma, krake, cuddlecouncil

[Account cuddlecouncil]
localrepository = cuddlecouncil-local
remoterepository = cuddlecouncil-remote

[Repository cuddlecouncil-local]
type         = Maildir
localfolders = ~/var/mail/cuddlecouncil
nametrans    = lambda name: name.upper() # Assumes remote maildirs are all uppercase

[Repository cuddlecouncil-remote]
type           = IMAP
remoteuser     = vi
remotehost     = cuddlecouncil.net
remotepassfile = ~/.security/offlineimap/cuddlecouncil.pass
nametrans      = lambda name: name.lower()
sslcacertfile  = /etc/ssl/certs/ca-certificates.crt

[Account vikramverma]
localrepository  = vikramverma-local
remoterepository = vikramverma-remote
maxsyncaccounts  = 3
maxconnections   = 3

[Repository vikramverma-local]
type         = Maildir
localfolders = ~/var/mail/vikramverma
nametrans = lambda folder: {'sent':    '[Gmail]/Sent Mail',
                            'flagged': '[Gmail]/Starred',
                            'trash':   '[Gmail]/Trash',
                            'archive': '[Gmail]/All Mail',
                            'inbox': 'INBOX',
                            }.get(folder, folder)

[Repository vikramverma-remote]
type             = Gmail
remoteuser       = me@vikramverma.com
remotepassfile   = ~/.security/offlineimap/vikramverma.pass
real_delete = no
nametrans = lambda folder: {'[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'flagged',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            'INBOX': 'inbox',
                            }.get(folder, folder)
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Account krake]
localrepository  = krake-local
remoterepository = krake-remote
maxsyncaccounts  = 3
maxconnections   = 3

[Repository krake-local]
type         = Maildir
localfolders = ~/var/mail/krake
nametrans = lambda folder: {'sent':    '[Gmail]/Sent Mail',
                            'flagged': '[Gmail]/Starred',
                            'trash':   '[Gmail]/Trash',
                            'archive': '[Gmail]/All Mail',
                            'inbox': 'INBOX',
                            }.get(folder, folder)

[Repository krake-remote]
type             = Gmail
remoteuser       = vi@krake.io
remotepassfile   = ~/.security/offlineimap/krake.pass
real_delete = no
nametrans = lambda folder: {'[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'flagged',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            'INBOX': 'inbox',
                            }.get(folder, folder)
sslcacertfile = /etc/ssl/certs/ca-certificates.crt


