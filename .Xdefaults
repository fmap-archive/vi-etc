URxvt*buffered: true
URxvt*cursorBlink: false
URxvt*cursorUnderline: true
URxvt*loginShell: true

URxvt*scrollBar: false

URxvt*font:xft:LetterGothicMono:size=13:style=Light,xft:envy code r:pixelsize=13
URxvt*boldFont:xft:LetterGothicMono:size=13:style=LightBold,xft:envy code r:pixelsize=13
URxvt*italicFont:xft:LetterGothicMono:size=13:style=LightItalic,xft:envy code r:pixelsize=13

#include "/home/vi/.rxvt/colours/solarized.Xresources"

URxvt*urgentOnBell: true

URxvt*perl-lib:      /home/vi/.rxvt/scripts/
URxvt*perl-ext:      default,url-select,clipboard,select,fontsize
URxvt*keysym.Mod4-u: perl:url-select:select_next
URxvt*keysym.Mod4-v: perl:clipboard:paste
URxvt*keysym.Control-Down: perl:fontsize:d
URxvt*keysym.Control-Up: perl:fontsize:i
URxvt*urlLauncher:   surf 
URxvt*underlineURLs: true
