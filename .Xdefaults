URxvt*buffered: true
URxvt*cursorBlink: false
URxvt*cursorUnderline: true
URxvt*loginShell: true

URxvt*scrollBar: false

URxvt*font:xft:LetterGothicMono:size=16:style=Light,9x15
URxvt*boldFont:xft:LetterGothicMono:size=16:style=LightBold,9x15
URxvt*italicFont:xft:LetterGothicMono:size=16:style=LightItalic,9x15

#include "/home/vi/.rxvt/colours/solarized.Xresources"

URxvt*urgentOnBell: true

URxvt*perl-lib:      /home/vi/.rxvt/scripts/
URxvt*perl-ext:      default,url-select,clipboard,select,fontsize
URxvt*keysym.Mod4-u: perl:url-select:select_next
URxvt*keysym.Mod4-v: perl:clipboard:paste
URxvt*keysym.Control-Down: perl:fontsize:d
URxvt*keysym.Control-Up: perl:fontsize:i
URxvt*urlLauncher:   /usr/local/bin/surf
URxvt*underlineURLs: true
